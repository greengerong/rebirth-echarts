{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "stripInternal": true,
    "outDir": "../lib",
    "rootDir": "",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "files": [
    "types.d.ts",
    "index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "debug": false,
    "genDir": "../aot"
  }
}
